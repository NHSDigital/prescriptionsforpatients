{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Vitest: Run current file",
      "request": "launch",
      "program": "${workspaceFolder}/../../node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "${file}",
        "--config",
        "${workspaceFolder}/vitest.config.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "POWERTOOLS_DEV": "true"
      }
    }
  ]
}
