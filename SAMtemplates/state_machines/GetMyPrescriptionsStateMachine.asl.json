{
  "Comment": "Get My Prescriptions State Machine",
  "StartAt": "Get My Prescriptions",
  "States": {
    "Get My Prescriptions": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "Payload.$": "$",
        "FunctionName": "${GetMyPrescriptionsFunctionArn}"
      },
      "Next": "Get My Prescriptions Result"
    },
    "Get My Prescriptions Result": {
      "Type": "Choice",
      "Choices": [
        {
          "Not": {
            "Variable": "$.Payload.statusCode",
            "NumericEquals": 200
          },
          "Next": "Failed Get My Prescriptions"
        }
      ],
      "Default": "Get Status Updates Toggle Parameter"
    },
    "Get Status Updates Toggle Parameter": {
      "Type": "Task",
      "Next": "Evaluate Get Status Updates Toggle",
      "Parameters": {
        "Name": "${ToggleGetStatusUpdatesParameterName}"
      },
      "Resource": "arn:aws:states:::aws-sdk:ssm:getParameter"
    },
    "Evaluate Get Status Updates Toggle": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.Payload",
          "StringMatches": "true",
          "Next": "Get Status Updates"
        }
      ],
      "Default": "Enrich Prescriptions"
    },
    "Get Status Updates": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "OutputPath": "$.Payload",
      "Parameters": {
        "Payload.$": "$",
        "FunctionName": "${GetStatusUpdatesFunctionArn}"
      },
      "InputPath": "$.Payload.statusUpdateData",
      "Next": "Enrich Prescriptions"
    },
    "Enrich Prescriptions": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "OutputPath": "$.Payload",
      "Parameters": {
        "Payload.$": "$",
        "FunctionName": "${EnrichPrescriptionsFunctionArn}"
      },
      "End": true
    },
    "Failed Get My Prescriptions": {
      "Type": "Pass",
      "End": true
    }
  }
}
